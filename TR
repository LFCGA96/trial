  <script>
    function showSection(sectionId) {
      document.getElementById('home').classList.add('hidden');
      document.getElementById('about').classList.add('hidden');
      document.getElementById('contact').classList.add('hidden');
      document.getElementById(sectionId).classList.remove('hidden');
    }

    function handleSubmit(event) {
      event.preventDefault(); // Prevent form from submitting immediately

      const phone = document.getElementById('phoneNumber').value.trim();
      const name = document.getElementById('userName').value;
      const email = document.getElementById('userEmail').value;

      if (phone) {
        // Submit the form to your email
        document.getElementById('contactForm').submit();

        // Show WhatsApp link after form submission
        setTimeout(() => {
          window.location.reload(); // Reload the page to show the WhatsApp link
          document.getElementById('whatsappLink').classList.remove('hidden');
          document.getElementById('whatsappBtn').href = `https://wa.me/918983902178?text=Hi, I am interested in your products. My details: Name: ${name}, Email: ${email}, Phone: ${phone}`;
        }, 1000); // Delay before redirecting
      } else {
        alert("Please enter a valid phone number.");
      }
    }
  </script>
